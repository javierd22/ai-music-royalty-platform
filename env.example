# ============================================================================
# AI Music Royalty Platform - Environment Variables Example
# ============================================================================
# Copy this file to .env.local for development
# For production, set these in Vercel and Render dashboards

# ============================================================================
# VERCEL (Frontend) - Variables starting with NEXT_PUBLIC_ are exposed to browser
# ============================================================================

# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# API Base URL (Required - Backend FastAPI URL)
# Development: http://localhost:8001
# Production: https://your-api.onrender.com
NEXT_PUBLIC_API_BASE=http://localhost:8001

# Attribution Service API (Required - Attribution Service URL)
# Development: http://localhost:8000
# Production: https://your-attrib-service.onrender.com
NEXT_PUBLIC_ATTRIB_BASE_URL=http://localhost:8000

# Blockchain (Optional)
NEXT_PUBLIC_CHAIN_ID=80001

# App Configuration (Optional)
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# RENDER (Backend) - Server-side only, NEVER expose to browser
# ============================================================================

# Supabase (Required)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...SERVICE_ROLE_KEY

# Admin Access (Required)
ADMIN_API_KEY=your_secure_random_admin_key_here

# CORS Configuration (Required)
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001

# Server Configuration
ENVIRONMENT=development
WORKERS=2
PORT=8001

# ============================================================================
# Optional Services
# ============================================================================

# Vector Database (Qdrant or Pinecone)
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key

# Audio Embeddings
OPENAI_API_KEY=sk-...

# Blockchain
BLOCKCHAIN_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_KEY
BLOCKCHAIN_PRIVATE_KEY=0x...YOUR_PRIVATE_KEY
CHAIN_ID=80001

# Dual Proof Configuration
DUAL_PROOF_WINDOW_MINUTES=10
DUAL_PROOF_THRESHOLD=0.85

# Observability
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io

# Feature Flags
DEMO_MODE=true
BLOCKCHAIN_ENABLED=false

# ============================================================================
# Payout Configuration (DEMO_MODE)
# ============================================================================
# DEMO_MODE=true enables mock payouts without blockchain
# DEMO_MODE=false requires blockchain configuration for real payouts

