{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHON_VERSION": "3.10.0",
        "SUPABASE_URL": "https://ai-music-royalty-platform.supabase.co",
        "SUPABASE_ANON_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.supabase-anon-key-example",
        "SUPABASE_SERVICE_ROLE_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.supabase-service-role-key-example",
        "CORS_ALLOWED_ORIGINS": "https://ai-music-royalty-platform.vercel.app,http://localhost:3000",
        "ENVIRONMENT": "production",
        "ADMIN_API_KEY": "${{ADMIN_API_KEY}}",
        "COMPLIANCE_SIGNING_SECRET": "${{COMPLIANCE_SIGNING_SECRET}}",
        "BLOCKCHAIN_ENABLED": "false",
        "DEMO_MODE": "false"
      }
    }
  }
}
